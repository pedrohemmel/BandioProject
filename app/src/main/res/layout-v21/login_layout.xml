<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_arrow_back_ios"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios"
        android:gravity="end"
        android:padding="20sp"
        android:text="@string/login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="100sp"
        android:paddingBottom="160sp"
        android:text="@string/bandio"
        android:textSize="40sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_account_circle"
        android:drawablePadding="10sp"
        android:hint="@string/username1"
        android:padding="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_account_circle"
        android:drawableRight="@drawable/ic_baseline_info"
        android:drawablePadding="10sp"
        android:hint="@string/password"
        android:padding="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="40sp"
        android:backgroundTint="@color/black"
        android:text="@string/entrar" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/don_t_have_an_account_sign_up" />


</LinearLayout>